{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "typeRoots": ["./typings", "./node_modules/@types"],
    "pretty": true
  },
  "include": ["./src/**/*"]
}
